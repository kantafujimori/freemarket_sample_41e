.items-box-container
  .item-details
    .item-details__name
      %h1 カーディガン
    .item-details__main
      .item-details__main__photo
        .item-details__main__photo__top
          %img{ :src => 'https://public.potaufeu.asahi.com/4e91-p/picture/13545647/061f1eeff8bb2432950152393bddf7cb.jpg', :class => 'item-details__main__photo__top__image'}
        .item-details__main__photo__sub
          %img{ :src => 'https://public.potaufeu.asahi.com/4e91-p/picture/13545647/061f1eeff8bb2432950152393bddf7cb.jpg', :class => 'item-details__main__photo__sub__image'}
          %img{ :src => 'https://public.potaufeu.asahi.com/4e91-p/picture/13545647/061f1eeff8bb2432950152393bddf7cb.jpg', :class => 'item-details__main__photo__sub__image'}
          %img{ :src => 'https://public.potaufeu.asahi.com/4e91-p/picture/13545647/061f1eeff8bb2432950152393bddf7cb.jpg', :class => 'item-details__main__photo__sub__image'}
          %img{ :src => 'https://public.potaufeu.asahi.com/4e91-p/picture/13545647/061f1eeff8bb2432950152393bddf7cb.jpg', :class => 'item-details__main__photo__sub__image'}
      .item-details__main__table
        %table
          %tbody
            %tr
              %th 出品者
              %td
                =link_to "カワ", user_path
                .item-user-ratings
                  .item-user-ratings__list
                    %i.fas.fa-laugh
                    %span 114
                  .item-user-ratings__list
                    %i.fas.fa-meh
                    %span 3
                  .item-user-ratings__list
                    %i.fas.fa-frown
                    %span 1
            %tr
              %th カテゴリー
              %td
                .category
                  = link_to products_path ,class: "category__magin-bottom" do
                    メンズ

                .category
                  = link_to  products_path ,class: "" do
                    .fas.fa-chevron-right
                    トップス
                .category
                  = link_to products_path,class: "" do
                    .fas.fa-chevron-right
                    カーディガン
            %tr
              %th ブランド
              %td
            %tr
              %th 商品のサイズ
              %td L
            %tr
              %th 商品の状態
              %td 目立った傷や汚れなし
            %tr
              %th 配送料の負担
              %td 送料込み（出品者負担）
            %tr
              %th 配送の方法
              %td らくらくメルカリ便
            %tr
              %th 配送元地域
              %td
                =link_to "千葉県"
            %tr
              %th 発送日の目安
              %td 2~3日で発送
    .item-details__price
      .item-details__price__main
        ¥500
      .item-details__price__tax
        (税込)
      .item-details__price__shipping-fee
        送料込み
    %button.item-details__btn-red
      購入画面に進む
